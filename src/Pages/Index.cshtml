@page
@model IndexModel
@{
    ViewData["Title"] = "Portifolio Filipe Magalhães";
}
<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }
</style>
<body>    
<center style="width: 1520px;">
    <section class="d-flex flex-wrap justify-content-around align-items-center p-2" style="height: 740px;">
        <container-texts class="">
            <texts class=" azul-pastel text-center">
                <h1 class="display-4">Olá mundo, me chamo</h1>
                <h1 class="display-4 salmao">Filipe Magalhães</h1>
                <h2>Desenvolvedor Back-End</h2>
            </texts>
            <icons style="width: 200px;" class="d-flex justify-content-around">
                <a href="https://github.com/FMagalhaess" target="_blank" class="text-white">
                    <span class="bi--github"></span>
                </a>
                <a href="https://www.linkedin.com/in/filipemagalhaesdev/" target="_blank" class="text-white">
                    <span class="bi--linkedin"></span>
                </a>
            </icons>
        </container-texts>
        <div>
            <img class="rounded-circle" src="https://avatars.githubusercontent.com/u/123377601?v=4" alt="Desenvolvedor" class="img-fluid" />
        </div>
        <container class="align-self-end" style="width: 2200px">
                <span class="container-circle circle-with-arrows d-flex flex-column flex-wrap salmao-bg circle" >
                    <span class="iconamoon--arrow-up-2"></span>
                </span>
        </container>
    </section>
    <section class="d-flex flex-wrap flex-column justify-content-around align-items-center p-2">
        <div class="d-flex flex-column align-items-center">
            <h2 id="Projects" class="salmao">Projetos</h2><br/>
        </div>
        <div class="d-flex" style="width: 100vh;">
        <projetos-totais class="d-flex flex-wrap">
        @foreach (var projeto in Model.Projetos)
        {
        <div class="d-flex card-projeto">
        <projeto class="d-flex flex-column align-items-center justify-content-center projeto">
            <img class="projeto-thumb" src="@projeto.Imagem" alt="">
            <div class="stacks-principais d-flex">
                <div class="stack-holder">
                    <img src="@projeto.PrincipalStacks[0].Url" alt="">
                    <p>@projeto.PrincipalStacks[0].Name</p>
                </div>
                <div class="stack-holder">
                    <img src="@projeto.PrincipalStacks[1].Url" alt="">
                    <p>@projeto.PrincipalStacks[1].Name</p>
                </div>
                <div class="stack-holder">
                    <img src="@projeto.PrincipalStacks[2].Url" alt="">
                    <p>@projeto.PrincipalStacks[2].Name</p>
                </div>
            </div>
        </projeto>
        <content class="d-flex flex-column">
            <p class="align-self-start titulo-projeto">@projeto.Nome</p>
            <p class="align-self-start descricao-projeto">@projeto.Descricao</p>
        </content>
        </div>

        }
        </projetos-totais>
        </div>
    </section>
    <section class=" d-flex flex-column">
        <div class="losango"></div>
        <div class="d-flex flex-wrap justify-content-around align-items-center p-2">
            <div class="d-flex flex-column align-items-center">
                <h2 class="salmao">Sobre mim</h2>
                <p class="text-justify">Sou um desenvolvedor back-end, com experiência em C#, bancos de dados (SQL Server, MySql).
                    Tenho experiência com desenvolvimento de aplicações web, utilizando tecnologias como C#, 
                    .NET Core, Entity Framework Core, SQL Server, HTML, CSS, JavaScript, Bootstrap, Git e GitHub.</p>
            </div>
            <div class="d-flex flex-column align-items-center">
                <h2 class="salmao">Habilidades</h2>
            </div>
    </section>
</center>
</body>
