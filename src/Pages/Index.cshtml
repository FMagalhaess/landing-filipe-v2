@page
@model IndexModel
@{
    ViewData["Title"] = "Portifolio Filipe Magalhães";
}
<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
    }
</style>
<body>    
<center class="p-0" style="width: 98vw;">
    <section class="container-fluid d-inline-flex flex-wrap justify-content-around align-items-center p-0" style="height: 85vh;">
        <container-texts class="">
            <texts class=" fonte-cor-secundaria text-center">
                <h1 class="display-4">Olá mundo, me chamo</h1>
                <h1 class="display-4 fonte-cor-primaria">Filipe Magalhães</h1>
                <h2>Desenvolvedor Back-End</h2>
            </texts>
            <icons style="width: 200px;" class="d-flex justify-content-around">
                <a href="https://github.com/FMagalhaess" target="_blank" class="text-white">
                    <span class="bi--github"></span>
                </a>
                <a href="https://www.linkedin.com/in/filipemagalhaesdev/" target="_blank" class="text-white">
                    <span class="bi--linkedin"></span>
                </a>
            </icons>
        </container-texts>
        <div>
            @* <img class="rounded-circle" src="https://avatars.githubusercontent.com/u/123377601?v=4" *@
            <img class=""
                 style="height: 500px; border-radius: 120px"
                 src="developer.jpeg"
                 alt="Desenvolvedor"
                 />
        </div>
        <container class="align-self-end" style="width: 2200px">
                <span class="container-circle circle-with-arrows d-flex flex-column flex-wrap fundo-cor-primaria circle" >
                    <span class="iconamoon--arrow-up-2"></span>
                </span>
        </container>
    </section>
    <section class="d-flex flex-wrap flex-column justify-content-around align-items-center p-0" style="margin-top: 13vh">
        <div class="d-flex flex-column align-items-center">
            <h2 id="Projects" class="fonte-cor-primaria">Projetos</h2><br/>
        </div>
        <div class="d-flex" style="width: 100vh;">
        <projetos-totais class="d-flex flex-wrap">
        @foreach (var projeto in Model.Projetos)
        {
        <div class="d-flex card-projeto">
        <projeto class="d-flex flex-column align-items-center justify-content-center projeto">
            <img class="projeto-thumb" src="@projeto.Imagem" alt="">
            <div class="stacks-principais d-flex justify-content-around">
                <div class="stack-holder">
                    <img class="stack" src="@projeto.PrincipalStacks[0].Url" alt="">
                    <p>@projeto.PrincipalStacks[0].Name</p>
                </div>
                <div class="stack-holder">
                    <img class="stack" src="@projeto.PrincipalStacks[1].Url" alt="">
                    <p>@projeto.PrincipalStacks[1].Name</p>
                </div>
                <div class="stack-holder">
                    <img class="stack" src="@projeto.PrincipalStacks[2].Url" alt="">
                    <p>@projeto.PrincipalStacks[2].Name</p>
                </div>
            </div>
        </projeto>
        <content class="d-flex flex-column holder-desc-tittle ">
            <p class="align-self-center titulo-projeto">@projeto.Nome</p>
            <p class="align-self-start descricao-projeto">@projeto.Descricao</p>
        </content>
        </div>

        }
        </projetos-totais>
        </div>
    </section>
    <section class=" d-flex flex-column p-0">
        @* <div class="losango"></div> *@
        <div class="d-flex flex-wrap justify-content-around align-items-center p-0">
            <div class="d-flex flex-column align-items-center">
                <h2 class="fonte-cor-primaria" id="About">Sobre mim</h2>
                <p class="text-justify">Sou um desenvolvedor back-end,
                    com experiência em C#, bancos de dados (SQL Server, MySql).
                    Tenho experiência com desenvolvimento de aplicações web,
                    utilizando tecnologias como C#, 
                    .NET Core, Entity Framework Core, SQL Server, HTML, CSS, JavaScript, Bootstrap, Git e GitHub.</p>
            </div>
            <div class="d-flex flex-column align-items-center">
                <h2 class="fonte-cor-primaria">Habilidades</h2>
            </div>
        </div>
            <div class="stacks d-flex flex-wrap justify-content-center">
                @foreach (var stack in Model.Stacks)
                {
                    <div class="d-flex flex-column skill-stack justify-content-between">
                        <div class="" style="height: 100%; width: 100%">
                            <img class="" style="height: 80px; width: 80px; margin-top: 10px" src=@stack.Url>
                            <p class="m-0 align-self-baseline"> @stack.Name </p>
                        </div>
                    </div>
                }
            </div>
    </section>
</center>
</body>
